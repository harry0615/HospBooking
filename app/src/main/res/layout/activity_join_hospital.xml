<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#dcdcdc"
     >

    <RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:background="#6A5ACD"
        >
        <TextView
            android:id="@+id/logotitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="회원가입(병원)"
            android:textSize="18dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            />

        <ImageView
            android:id="@+id/back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="33dp"
        android:layout_below="@+id/top_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="#808080"
        />


    <RelativeLayout
        android:id="@+id/email_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="33dp"
        android:layout_below="@+id/line"
        android:layout_marginTop="17dp"
        android:background="#ffffff"
        >
        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="email을 입력해주세요."
            android:textColorHint="#888888"
            android:paddingTop="2dp"
            android:paddingLeft="60dp"
            android:textColor="#ffffff"
            android:textSize="14dp"
            android:singleLine="true"
            android:background="@drawable/input_login"
            />

        <ImageView
            android:id="@+id/emailh_icon"
            android:layout_width="17dp"
            android:layout_height="12dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="27.5dp"
            android:background="@drawable/join_email"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/password_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="33dp"
        android:layout_below="@+id/email_layout"
        android:layout_marginTop="10dp"
        android:background="#ffffff"
        >
        <EditText
            android:id="@+id/pass"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="패스워드를 입력해주세요."
            android:textColorHint="#888888"
            android:paddingTop="2dp"
            android:paddingLeft="60dp"
            android:textColor="#ffffff"
            android:textSize="14dp"
            android:singleLine="true"
            android:background="@drawable/input_login"
            />

        <ImageView
            android:id="@+id/search_icon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="27.5dp"
            android:background="@drawable/join_pass"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="33dp"
        android:layout_below="@+id/password_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="#808080"
        />

    <RelativeLayout
        android:id="@+id/input_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="33dp"
        android:layout_below="@+id/line2"
        android:layout_marginTop="20dp"
        android:background="#ffffff"
        >
        <EditText
            android:id="@+id/nickname"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingTop="2dp"
            android:paddingLeft="60dp"
            android:layout_centerHorizontal="true"
            android:hint="닉네임을 입력해 주세요."
            android:textColor="#888888"
            android:textSize="14dp"
            android:background="#00ffffff"
            />

        <ImageView
            android:id="@+id/icon_nickname"
            android:layout_width="17dp"
            android:layout_height="15.5dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="27.5dp"
            android:background="@drawable/icon_acount"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/desc3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="33dp"
        android:layout_below="@+id/input_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="14dp"
        android:textColor="#ff5a49"
        android:text=""
        android:gravity="center"
        />

    <Button
        android:id="@+id/join_done"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:text="회원가입 완료"
        android:textColor="#ffffff"
        android:textSize="16dp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="#6A5ACD"
        />
</RelativeLayout>